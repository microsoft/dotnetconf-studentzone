<ApexChart TItem="WaterConsumptionItemModel"
            Title="Water Consumptions">
    <ApexPointSeries TItem="WaterConsumptionItemModel"
                        Items="Consumptions"
                        Name="Water Consumptions"
                        SeriesType="SeriesType.Line"
                        XValue="@(p => p.DateTime.ToString("yyyy-MM-dd HH:mm"))"
                        YValue="@(p => Convert.ToDecimal(p.Consumption))"
                        />
</ApexChart>

@code {
    [Parameter] public List<WaterConsumptionItemModel>? Consumptions { get; set; }
}